{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "target": "es5",
      "module": "commonjs",
      "jsx": "react",
      "allowJs": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "moduleResolution": "node",
      "noImplicitThis": true,
      "strict": true,
      "importHelpers": true,
      "lib": [
        "dom",
        "esnext"
      ]
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
